{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/chat",
      "dest": "server.js"
    },
    {
      "src": "/characters",
      "dest": "server.js"
    },
    {
      "src": "/tts",
      "dest": "server.js"
    },
    {
      "src": "/health",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "MODAL_BASE_URL": "https://minuterepeater7-hue--georgian-chat-llm-generate-response.modal.run",
    "MODAL_HEALTH_URL": "https://minuterepeater7-hue--georgian-chat-llm-health-check.modal.run"
  }
}
